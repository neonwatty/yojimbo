{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": ["scripts/*.js", "ecosystem.config.js"],
      "ignoreDependencies": ["node-pty"]
    },
    "client": {
      "entry": ["src/main.tsx", "e2e/**/*.ts"],
      "project": ["src/**/*.{ts,tsx}", "e2e/**/*.ts"],
      "ignore": [
        "src/vite-env.d.ts",
        "src/hooks/index.ts",
        "src/components/plans/**",
        "src/components/mockups/**",
        "src/hooks/useFileWatcher.ts",
        "src/store/fileChangesStore.ts"
      ],
      "vite": {
        "config": ["vite.config.ts"]
      },
      "playwright": {
        "config": ["playwright.config.ts"]
      },
      "ignoreDependencies": [
        "clsx",
        "tailwind-merge",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint-plugin-react",
        "eslint-plugin-react-hooks"
      ]
    },
    "server": {
      "entry": ["src/index.ts", "src/**/*.test.ts"],
      "project": ["src/**/*.ts"],
      "vitest": {
        "config": ["vitest.config.ts"]
      },
      "ignoreDependencies": [
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser"
      ]
    },
    "shared": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignoreBinaries": ["eslint"]
    }
  },
  "ignore": ["**/dist/**", "**/node_modules/**"],
  "ignoreExportsUsedInFile": true,
  "rules": {
    "duplicates": "off",
    "exports": "off"
  }
}
