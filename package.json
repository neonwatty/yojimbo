{
  "name": "cc-orchestrator",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Claude Code Orchestrator - Manage multiple Claude Code instances",
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"pnpm --filter @cc-orchestrator/client dev\" \"pnpm --filter @cc-orchestrator/server dev\"",
    "build": "pnpm -r build",
    "lint": "eslint packages",
    "lint:fix": "eslint packages --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,css}\"",
    "typecheck": "pnpm -r typecheck",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "check": "pnpm lint && pnpm format:check && pnpm typecheck && pnpm knip",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:int": "pnpm -r test:int",
    "test:e2e": "pnpm --filter @cc-orchestrator/client test:e2e",
    "test:coverage": "pnpm -r test:coverage",
    "db:migrate": "pnpm --filter @cc-orchestrator/server db:migrate",
    "db:reset": "pnpm --filter @cc-orchestrator/server db:reset",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist coverage .turbo"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "knip": "^5.41.1",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@10.13.1"
}
