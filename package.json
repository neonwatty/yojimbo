{
  "name": "yojimbo",
  "version": "0.3.0",
  "private": true,
  "description": "Yojimbo - Manage multiple Claude Code terminal instances",
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "dev": "CI=true concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "CI=true npm run dev --workspace=client",
    "dev:server": "CI=true npm run dev --workspace=server",
    "build": "npm run build --workspace=shared && npm run build --workspace=client && npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "knip": "knip",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspace=client",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:reset": "npm run db:reset --workspace=server",
    "clean": "rm -rf node_modules client/node_modules server/node_modules shared/node_modules client/dist server/dist"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "knip": "^5.76.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "dependencies": {
    "node-pty": "1.0.0"
  }
}
