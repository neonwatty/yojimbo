{
  "name": "@cc-orchestrator/server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --testPathPattern=unit",
    "test:int": "vitest run --testPathPattern=integration",
    "test:coverage": "vitest run --coverage",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:reset": "tsx src/db/reset.ts"
  },
  "dependencies": {
    "@cc-orchestrator/shared": "workspace:*",
    "@fastify/cors": "^10.0.2",
    "@fastify/websocket": "^11.0.2",
    "better-sqlite3": "^11.7.0",
    "fastify": "^5.2.1",
    "node-pty": "^1.0.0",
    "ws": "^8.18.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "@types/ws": "^8.18.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
